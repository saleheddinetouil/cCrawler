{
    "start_url": "https://donate.givedirectly.org/payment-methods",
    "steps": [
      {
        "action": "navigate",
        "target": "https://donate.givedirectly.org/payment-methods"
      },
      {
        "action": "input",
        "target_type": "id",
        "target": "first-name",
        "input_data": "person.name",
         "wait_condition": "presence_of_element_located"
      },
      {
        "action": "input",
        "target_type": "id",
        "target": "last-name",
         "input_data": "person.name",
         "wait_condition": "presence_of_element_located"
      },
       {
        "action": "input",
        "target_type": "id",
        "target": "link-authentication-element",
        "input_data": "person.email",
         "wait_condition": "presence_of_element_located"
      },
          {
            "action": "switch_frame",
            "target_type": "css",
            "target": "[title='Secure payment input frame']",
             "wait_condition": "presence_of_element_located"
          },
      {
        "action": "input",
        "target_type": "name",
        "target": "cardnumber",
        "input_data": "cc.number",
        "wait_condition": "presence_of_element_located"
  
      },
       {
           "action": "switch_to_default"
       },
          {
            "action": "switch_frame",
             "target_type": "css",
             "target": "[title='Secure payment input frame']",
              "wait_condition": "presence_of_element_located"
          },
  
      {
        "action": "input",
        "target_type": "name",
        "target": "exp-date",
         "input_data": "cc.exp",
        "wait_condition": "presence_of_element_located"
      },
       {
           "action": "switch_to_default"
       },
       {
           "action": "switch_frame",
            "target_type": "css",
             "target": "[title='Secure payment input frame']",
              "wait_condition": "presence_of_element_located"
       },
      {
        "action": "input",
        "target_type": "name",
        "target": "cvc",
        "input_data": "cc.cvc",
         "wait_condition": "presence_of_element_located"
      },
        {
           "action": "switch_to_default"
        },
      {
          "action": "click",
            "target_type": "css",
             "target": "[aria-label='Donate']",
              "wait_condition":"element_to_be_clickable"
          },
        {
            "action": "check_card",
            "check_type": "text",
            "target_type": "css",
             "target": "[role='alert']",
              "check_text":"Your card was declined.",
             "wait_condition":"text_to_be_present_in_element",
             "current_cc":"cc.number"
          }
  
  
    ]
  }